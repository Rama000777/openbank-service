pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                echo 'Checkout'
            }
        }
        stage('Build') {
            steps {
                echo 'Clean Build'
                sh '/opt/maven/bin/mvn clean compile'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
                sh '/opt/maven/bin/mvn test'
            }
        }
        stage('JaCoCo') {
            steps {
                echo 'Code Coverage'
                jacoco()
            }
        }
        stage("build & SonarQube analysis") {
            agent any
            steps {
              echo 'Sonar Scanner'
              withSonarQubeEnv('SonarQube Server') {
                sh '/opt/maven/bin/mvn clean package sonar:sonar -Dsonar.host.url=http://13.234.117.3:9000 -Dsonar.login=95f4eea512595eef178493adc9dbfc4221c7d6ce'
              }
            }
        }
        stage('Package') {
            steps {
                echo 'Packaging'
                sh '/opt/maven/bin/mvn package -DskipTests'
            }
        }
        stage('Deploy') {
            steps {
                echo '## TODO DEPLOYMENT ##'
            }
        }
    }
    
    post {
        always {
            echo 'JENKINS PIPELINE'
        }
        success {
            echo 'JENKINS PIPELINE SUCCESSFUL'
        }
        failure {
            echo 'JENKINS PIPELINE FAILED'
        }
        unstable {
            echo 'JENKINS PIPELINE WAS MARKED AS UNSTABLE'
        }
        changed {
            echo 'JENKINS PIPELINE STATUS HAS CHANGED SINCE LAST EXECUTION'
        }
    }
}